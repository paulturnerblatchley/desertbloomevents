# Enable RewriteEngine
RewriteEngine On

# Redirect filmfestival to filmfest
RewriteRule ^filmfestival/?$ /filmfest [R=301,L]

# Remove .html extension (optional - if you're using .html files)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.html [NC,L]

# Redirect www to non-www (optional)
RewriteCond %{HTTP_HOST} ^www\.desertbloom\.events [NC]
RewriteRule ^(.*)$ https://desertbloom.events/$1 [L,R=301]

# Force HTTPS (optional but recommended)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]

# Set default charset
AddDefaultCharset UTF-8

# Prevent directory listing
Options -Indexes

# Custom error pages (optional)
ErrorDocument 404 /404.html

# Security headers (optional but recommended)
<IfModule mod_headers.c>
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Cache control for better performance (optional)
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    
    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    
    # HTML
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# Compression (optional but recommended)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript application/json
</IfModule>
